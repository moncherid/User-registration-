from flask import Flask, request, jsonify app = Flask(__name__) # Sample data for investments investments = [] # Route to propose an investment @app.route('/propose_investment', methods=['POST']) def propose_investment(): investment_info = request.json investments.append(investment_info) return jsonify({"message": "Investment proposal added successfully"}) # Route to list investment proposals @app.route('/list_investments', methods=['GET']) def list_investments(): return jsonify(investments) # Route to vote on an investment proposal @app.route('/vote', methods=['POST']) def vote(): vote_info = request.json investment_id = vote_info.get('investment_id') vote = vote_info.get('vote') for investment in investments: if investment['id'] == investment_id: if 'votes' not in investment: investment['votes'] = [] investment['votes'].append(vote) return jsonify({"message": "Vote submitted successfully"}) return jsonify({"message": "Investment not found"}) if __name__ == '__main__': app.run(debug=True) 
