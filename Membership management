# Import necessary modules from flask import Flask, request, jsonify # Initialize Flask app app = Flask(__name__) # Sample data for group members group_members = [ {"id": 1, "name": "Member 1"}, {"id": 2, "name": "Member 2"}, {"id": 3, "name": "Member 3"} ] # Route to get all group members @app.route('/members', methods=['GET']) def get_members(): return jsonify(group_members) # Route to add a new member @app.route('/members', methods=['POST']) def add_member(): new_member = request.json new_member['id'] = len(group_members) + 1 group_members.append(new_member) return jsonify({"message": "Member added successfully"}) # Route to lock membership @app.route('/lock', methods=['POST']) def lock_membership(): # Add code here to implement locking membership return jsonify({"message": "Membership locked"}) # Route to unlock membership @app.route('/unlock', methods=['POST']) def unlock_membership(): # Add code here to implement unlocking membership return jsonify({"message": "Membership unlocked"}) if __name__ == '__main__': app.run(debug=True) 
